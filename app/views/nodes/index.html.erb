<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Lat</th>
    <th>Lon</th>
    <th>Osmid</th>
    <th>Way</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.lat %></td>
    <td><%= node.lon %></td>
    <td><%= node.osmid %></td>
    <td><%= node.way_id %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

